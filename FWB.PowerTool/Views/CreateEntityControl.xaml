<Window x:Class="FWB.PowerTool.Views.CreateEntityControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vsshell="clr-namespace:Microsoft.VisualStudio.Shell;assembly=Microsoft.VisualStudio.Shell.15.0"
             xmlns:local="clr-namespace:FWB.PowerTool.Views"
             Background="#FF2D2D2D"
             mc:Ignorable="d"     
             Title="FWB.PowerTool - Entity Generator"
             WindowStyle="SingleBorderWindow"
             x:Name="MyToolWindow" Height="600" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="57*"/>
            <ColumnDefinition Width="743*"/>
        </Grid.ColumnDefinitions>
        <TabControl Background="#FF424242" BorderThickness="0" Grid.ColumnSpan="2">
            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TabItem">
                                <Border Name="Border" BorderThickness="0" Background="Transparent" Height="45" MinWidth="180">
                                    <ContentPresenter x:Name="ContentSite"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center"
                                        ContentSource="Header"
                                        Margin="25,2"
                                        TextBlock.FontSize="14"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="#FF333333"/>
                                        <Setter TargetName="Border" Property="BorderThickness" Value="0,0,0,2"/>
                                        <Setter TargetName="Border" Property="BorderBrush" Value="White"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="False">
                                        <Setter TargetName="Border" Property="Background" Value="#FF424242"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TabControl.Resources>

            <TabControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Horizontal"/>
                </ItemsPanelTemplate>
            </TabControl.ItemsPanel>

            <TabItem Header="Entity Information" Foreground="White" FontWeight="SemiBold" Margin="150,0,-150,0">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="219*"/>
                        <ColumnDefinition Width="169*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left Column -->
                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                        <!-- Entity Info -->
                        <GroupBox Header="Entity Info" Foreground="White" Background="#FF424242" Margin="0,0,0,10">
                            <Grid Margin="10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <Label Content="Namespace" Foreground="White" Grid.Row="0" Grid.Column="0" Margin="0,5"/>
                                <TextBox Text="test" Grid.Row="0" Grid.Column="1" Margin="0,5" Height="23" Background="#FF2D2D2D" Foreground="White"/>

                                <Label Content="Entity Name" Foreground="White" Grid.Row="1" Grid.Column="0" Margin="0,5"/>
                                <TextBox Text="SDSDSD" Grid.Row="1" Grid.Column="1" Margin="0,5" Height="23" Background="#FF2D2D2D" Foreground="White"/>

                                <Label Content="Entity Name (plural)" Foreground="White" Grid.Row="2" Grid.Column="0" Margin="0,5"/>
                                <TextBox Text="SDSDSDs" Grid.Row="2" Grid.Column="1" Margin="0,5" Height="23" Background="#FF2D2D2D" Foreground="White"/>

                                <Label Content="Database Table Name" Foreground="White" Grid.Row="3" Grid.Column="0" Margin="0,5"/>
                                <TextBox Text="SDSDSDs" Grid.Row="3" Grid.Column="1" Margin="0,5" Height="23" Background="#FF2D2D2D" Foreground="White" TextChanged="TextBox_TextChanged"/>

                                <Label Content="Base Class" Foreground="White" Grid.Row="4" Grid.Column="0" Margin="0,5"/>
                                <ComboBox Grid.Row="4" Grid.Column="1" Margin="0,5" Height="23" SelectedIndex="0" Background="#FF2D2D2D" Foreground="Black">
                                    <ComboBoxItem Content="Entity"/>
                                </ComboBox>

                                <Label Content="Primary Key" Foreground="White" Grid.Row="5" Grid.Column="0" Margin="0,5"/>
                                <ComboBox Grid.Row="5" Grid.Column="1" Margin="0,5" Height="23" SelectedIndex="0" Background="#FF2D2D2D" Foreground="Black">
                                    <ComboBoxItem Content="int"/>
                                </ComboBox>
                            </Grid>
                        </GroupBox>

                        <!-- Database Migrations -->
                        <GroupBox Header="Database Migrations" Foreground="White" Background="#FF424242">
                            <StackPanel Margin="10">
                                <CheckBox Content="Add Migration" IsChecked="True" Foreground="White" Margin="0,0,0,5"/>
                                <CheckBox Content="Update Database" IsChecked="True" Foreground="White"/>
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>

                    <!-- Right Column -->
                    <StackPanel Grid.Column="1">
                        <!-- User Interface -->
                        <GroupBox Header="User Interface" Foreground="White" Background="#FF424242" Margin="0,0,0,10">
                            <Grid Margin="10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="3*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <CheckBox Content="Create User Interface" IsChecked="True" Foreground="White" Margin="0,2"/>
                                    <CheckBox Content="Create View Only" IsChecked="True" Foreground="White" Margin="0,2"/>
                                    <CheckBox Content="Create Non-modal CRUD Page" Foreground="White" Margin="0,2" />
                                    <CheckBox Content="Create Master Detail Page" Foreground="White" Margin="0,2"/>
                                    <CheckBox Content="Generate Overridable Entity" Foreground="White" Margin="0,2"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1" Margin="15,0,0,0">
                                    <TextBlock Text="Menu Position" Foreground="White" Margin="0,0,0,5"/>
                                    <ComboBox Width="100" Height="23" SelectedIndex="0" Background="#FF2D2D2D" Foreground="Black">
                                        <ComboBoxItem Content="Root"/>
                                    </ComboBox>
                                </StackPanel>
                            </Grid>
                        </GroupBox>

                        <!-- Excel Operations -->
                        <GroupBox Header="Excel operations" Foreground="White" Background="#FF424242" Margin="0,0,0,10">
                            <StackPanel Margin="10,5">
                                <CheckBox Content="Create Excel Export Button" IsChecked="True" Foreground="White" Margin="0,2"/>
                                <CheckBox Content="Create Excel Import Button" IsChecked="True" Foreground="White" Margin="0,2"/>
                            </StackPanel>
                        </GroupBox>

                        <!-- Auditing -->
                        <GroupBox Header="Auditing" Foreground="White" Background="#FF424242" Margin="0,0,0,10">
                            <StackPanel Margin="10,5">
                                <CheckBox Content="Track Entity History" IsEnabled="False" Foreground="White"/>
                                <TextBlock Text="This feature will not be active in your application, if entity history is disabled in your solution." 
                                           Foreground="Gray" TextWrapping="Wrap" FontSize="11" Margin="0,5,0,0"/>
                            </StackPanel>
                        </GroupBox>

                        <!-- Multi-Tenancy -->
                        <GroupBox Header="Multi-Tenancy" Foreground="White" Background="#FF424242" Margin="0,0,0,10">
                            <StackPanel Margin="10,5">
                                <CheckBox Content="Host" IsChecked="True" Foreground="White" Margin="0,2"/>
                                <CheckBox Content="Tenant" IsChecked="True" Foreground="White" Margin="0,2"/>
                            </StackPanel>
                        </GroupBox>

                        <!-- Tests -->

                        <!-- Maui -->
                    </StackPanel>
                </Grid>
            </TabItem>

            <TabItem Header="Properties" Foreground="White" FontWeight="SemiBold" Margin="150,0,-150,0">
                <local:PropertiesControl/>
            </TabItem>

            <TabItem Header="Navigation Properties" Foreground="#AAAAAA" Margin="150,0,-150,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="558*"/>
                        <ColumnDefinition Width="239*"/>
                    </Grid.ColumnDefinitions>
                    <!-- Navigation Properties Content -->
                </Grid>
            </TabItem>
        </TabControl>

        <!-- Footer -->
        <Grid VerticalAlignment="Top" Background="#FF2D2D2D" Height="77" Margin="0,507,0,0" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Button Content="GENERATE" Grid.Column="1" Width="186" 
                    Background="#FF00C853" Foreground="White" 
                    HorizontalAlignment="Center" Margin="0,17,0,17"/>
        </Grid>
    </Grid>
</Window>
