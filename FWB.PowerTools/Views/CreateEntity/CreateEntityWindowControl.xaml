<UserControl x:Class="FWB.PowerTools.Views.CreateEntity.CreateEntityWindowControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vsshell="clr-namespace:Microsoft.VisualStudio.Shell;assembly=Microsoft.VisualStudio.Shell.15.0"
             Background="{DynamicResource {x:Static vsshell:VsBrushes.WindowKey}}"
             Foreground="{DynamicResource {x:Static vsshell:VsBrushes.WindowTextKey}}"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300"
             Name="MyToolWindow">
    <Grid>
        <StackPanel Orientation="Vertical">
            <Label Content="Entity Name:" />
            <TextBox x:Name="EntityNameTextBox" />
            <Label Content="Entity Type:" />
            <ComboBox x:Name="EntityTypeComboBox">
                <ComboBoxItem Content="Type 1" />
                <ComboBoxItem Content="Type 2" />
            </ComboBox>
            <Button Content="Generate Code" Click="Button_Click" />
        </StackPanel>
    </Grid>
</UserControl>
